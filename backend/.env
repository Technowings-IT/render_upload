# AGV Fleet Management Environment Configuration
NODE_ENV=development
PORT=3000
# .env - Environment Configuration for AGV Fleet Backend

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Raspberry Pi SSH Configuration
RASPBERRY_PI_HOST=192.168.0.84
RASPBERRY_PI_PORT=22
RASPBERRY_PI_USER=piros
RASPBERRY_PI_PASSWORD=piros
# Alternatively, use SSH key (more secure)
# RASPBERRY_PI_PRIVATE_KEY_PATH=/path/to/private/key

# Raspberry Pi Paths
RASPBERRY_PI_MAP_DIR=/home/piros/ros2_ws/src/nav2_bringup/maps
RASPBERRY_PI_ROS_SCRIPT=/home/piros/ros2_ws/load_map.sh
RASPBERRY_PI_WORKSPACE=/home/piros/ros2_ws

# Map Storage Configuration
MAPS_STORAGE_DIR=./storage/maps
MAPS_BACKUP_DIR=./storage/backups
MAPS_TEMP_DIR=./temp
MAX_MAP_SIZE_MB=100
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Python Converter Configuration
PYTHON_EXECUTABLE=python3
MAP_CONVERTER_SCRIPT=./scripts/map_converter.py
CONVERSION_TIMEOUT_MS=30000

# Security Configuration
JWT_SECRET=your-jwt-secret-here
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,http://192.168.1.0/24

# Database Configuration (if using)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=agv_fleet
# DB_USER=postgres
# DB_PASSWORD=password

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7

# Feature Flags
ENABLE_MAP_EDITING=true
ENABLE_SSH_DEPLOYMENT=true
ENABLE_AUTO_MAP_LOADING=true
ENABLE_BATCH_OPERATIONS=true
ENABLE_MAP_ANALYTICS=true

# Development Configuration
DEV_MOCK_SSH=false
DEV_SKIP_PI_VALIDATION=false
DEV_ENABLE_DEBUG_ROUTES=falseHOST=0.0.0.0

# ROS2 Configuration
ROS_DOMAIN_ID=0
ENABLE_SIMULATION=false
DEBUG_ROS=false

# Security
ENABLE_AUTH=false
JWT_SECRET=your-secret-key-change-this

# Logging
LOG_LEVEL=info

# Performance
MAX_PAYLOAD_SIZE=50mb
