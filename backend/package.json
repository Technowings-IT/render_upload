{
  "name": "agv-fleet-backend",
  "version": "1.0.0",
  "description": "Backend server for AGV Fleet Management System with ROS2 integration",
  "main": "app.js",
  "scripts": {
    
    "start": "node app.js",
    "dev": "nodemon app.js",
    "debug": "nodemon --inspect=0.0.0.0:9229 app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "setup": "npm install && npm run setup-ros && npm run create-dirs",
    "setup-ros": "npx rclnodejs-cli build",
    "create-dirs": "mkdir -p storage/maps storage/logs storage/uploads",
    "clean": "rm -rf node_modules/.cache && rm -rf logs/* && npm run create-dirs",
    "build": "echo 'Building backend...' && npm install --production",
    "prebuild": "npm run lint && npm run test",
    "docker:build": "docker build -t agv-fleet-backend .",
    "docker:run": "docker run -p 3000:3000 -e ROS_DOMAIN_ID=0 agv-fleet-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop agv-fleet-backend",
    "pm2:restart": "pm2 restart agv-fleet-backend",
    "pm2:logs": "pm2 logs agv-fleet-backend",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "monitor": "pm2 monit",
    "check-deps": "npm audit && npm outdated",
    "update-deps": "npm update",
    "ros:check": "ros2 doctor",
    "ros:topics": "ros2 topic list",
    "ros:nodes": "ros2 node list",
    "backup": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz storage/ config/",
    "health-check": "curl -f http://localhost:3000/api/control/health || exit 1",
    "setup-pi": "node scripts/setup-rasberry-pi.js",
    "test-ssh": "node scripts/test-ssh-connection.js",
    "convert-map": "python3 scripts/map_converter.py"
  },
  "keywords": [
    "agv",
    "fleet-management",
    "ros2",
    "robotics",
    "websocket",
    "automation",
    "raspberry-pi",
    "navigation",
    "mapping",
    "joystick-control"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/agv-fleet-backend.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.1",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^7.1.1",
    "rclnodejs": "^1.2.0",
    "ssh2": "^1.16.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "pm2": "^6.0.8"
  },
  "ros2Requirements": {
    "description": "ROS2 system requirements (not npm packages)",
    "required_version": "jazzy",
    "required_packages": [
      "nav2_msgs",
      "geometry_msgs",
      "sensor_msgs",
      "std_msgs",
      "nav_msgs",
      "tf2_msgs",
      "std_srvs"
    ],
    "install_command": "sudo apt install ros-jazzy-desktop ros-jazzy-navigation2"
  },
  "systemRequirements": {
    "os": [
      "linux",
      "ubuntu22.04"
    ],
    "ros2": "jazzy",
    "hardware": {
      "raspberry_pi": "5",
      "minimum_ram": "4GB",
      "storage": "32GB"
    }
  },
  "config": {
    "port": 3000,
    "ros_domain_id": 0,
    "log_level": "info"
  }
}
